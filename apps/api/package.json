{
	"name": "@repo/api",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"exports": {
		"./types": "./src/types.ts",
		"./src/*": "./src/*.ts"
	},
	"scripts": {
		"dev": "bun --watch src/main.ts",
		"start": "bun src/main.ts",
		"test": "vitest run",
		"test:watch": "vitest",
		"typecheck": "tsc --noEmit",
