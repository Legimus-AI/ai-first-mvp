		"db:migrate": "drizzle-kit migrate",
		"db:seed": "tsx src/db/seed.ts"
	},
	"dependencies": {
		"@google/generative-ai": "^0.24.1",
		"@hono/swagger-ui": "^0.5.3",
		"@hono/zod-openapi": "1.2.1",
		"@hono/zod-validator": "^0.7.6",
		"@logtape/hono": "^2.0.2",
		"@logtape/logtape": "^2.0.2",
		"@repo/shared": "workspace:*",
		"bcryptjs": "^3.0.3",
		"drizzle-orm": "^0.45.1",
		"hono": "^4.11.9",
		"ioredis": "^5.9.2",
		"postgres": "^3.4.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@types/bcryptjs": "^3.0.0",
		"@types/ioredis": "^5.0.0",
		"@types/node": "^25.2.2",
		"drizzle-kit": "^0.30.0",
		"esbuild": "^0.24.0",
		"tsx": "^4.21.0",
		"typescript": "^5.7.0",
		"vitest": "^3.0.0"
	}
