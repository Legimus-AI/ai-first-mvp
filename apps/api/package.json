{
	"name": "@repo/api",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"exports": {
		"./types": "./src/types.ts",
		"./src/*": "./src/*.ts"
	},
	"scripts": {
		"dev": "bun --env-file=../../.env --watch src/main.ts",
		"start": "bun --env-file=../../.env src/main.ts",
		"test": "vitest run",
		"test:contracts": "vitest run src/__tests__/contracts.test.ts",
		"test:watch": "vitest",
		"typecheck": "tsc --noEmit",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:seed": "tsx src/db/seed.ts"
	},
	"dependencies": {
		"@google/generative-ai": "^0.24.1",
		"@hono/swagger-ui": "^0.5.3",
		"@hono/zod-openapi": "0.19.10",
		"@hono/zod-validator": "^0.4.0",
		"@logtape/hono": "^2.0.2",
		"@logtape/logtape": "^2.0.2",
		"@repo/shared": "workspace:*",
		"bcryptjs": "^3.0.3",
		"drizzle-orm": "^0.38.0",
		"hono": "^4.7.0",
		"ioredis": "^5.9.2",
		"postgres": "^3.4.0",
		"zod": "^3.24.0"
	},
	"devDependencies": {
		"@types/bcryptjs": "^3.0.0",
		"@types/ioredis": "^5.0.0",
		"@types/node": "^25.2.2",
		"drizzle-kit": "^0.30.0",
		"esbuild": "^0.24.0",
		"tsx": "^4.21.0",
		"typescript": "^5.7.0",
		"vitest": "^3.0.0"
	}
}
